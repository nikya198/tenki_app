<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <%= form_with url: '/search', local: true, method: :get, class: 'form-inline' do |form| %>
            <%= select_tag :prefecture_id, options_from_collection_for_select(@prefectures, :prefecture_id, :prefecture_name, params[:prefecture_id]), {:class => "form-control"} %>
            <%= select_tag :ward_id, options_from_collection_for_select(@cities, :ward_id, :city_name, params[:ward_id]),{:class => "form-control"}%>
            <%= hidden_field_tag :city_id, options_from_collection_for_select(@cities, :city_id, :city_name) %>
            <input type="submit" value="検索" class="btn btn-primary">
            <% end %>
        </div>
    </div>
</div>